  MESSAGE(STATUS "export FAULHABERROOT=/usr/local/" )
  MESSAGE(STATUS "FAULHABERROOT environment variable not set." )
  MESSAGE(STATUS "")
  MESSAGE(STATUS "FAULHABERROOT environment variable not set." )
  MESSAGE(STATUS "")
  MESSAGE(STATUS "FAULHABERROOT environment variable not set." )
